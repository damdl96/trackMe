
<%= form_with model: @activity, local: true do |form| %>

  <div class="row justify-content-center pb-4 pt-4">
    <div class="col-12 col-md-4 text-center pb-3">
      <label for="name">Activity name:</label>
      <%= form.text_field :name %>
    </div>
    <div class="col-12 col-md-4 text-center pb-3">
      <label for="description">Description:</label>
      <%= form.text_field :description %>
    </div>
  </div>
  <br>
  <div class="my-padding">
    <%= form.submit :Submit, class: 'btn btn-warning'%>
    <%= link_to '<button class="btn btn-link" type="button">Go home</button>'.html_safe, root_path %>
  </div>
  <% if @activity.errors.any? %>
    <br>
    <div class = "container">
      <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Whoops!</h4>
        <p>looks like we have some trouble saving this activity:</p>
        <hr>
        <ul class="my-padding">
          <% @activity.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
<% end %>