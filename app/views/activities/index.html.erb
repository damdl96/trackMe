<h1 class="custom-header">Saved Activities</h1>

<div class="d-flex justify-content-center">
  <div class="container contain"">
    <div class="row bgcolor">
      <div class="col-2 inner_column_top inner_column bgtop">
        Name
      </div>
      <div class="col-4 inner_column_top inner_column bgtop">
        Description
      </div>
      <div class="col-6 inner_column_top bgtop">
      </div>
    </div>
    <% @activities.each do |activity| %>
      <div class="row align-items-center addmargin">
        <div class="col-2 inner_column">
          <%= activity.name %>
        </div>
        <div class="col-4 inner_column">
          <%= activity.description %>
        </div>
        <div class="col-2 inner_column">
          <%= link_to 'Show', activity_path(activity), class: "badge badge-pill badge-primary" %>
        </div>
        <div class="col-2 inner_column">
          <%= link_to 'Edit', edit_activity_path(activity), class: "badge badge-pill badge-warning"%>
        </div>
        <div class="col-2 inner_column_noborder">
          <%= link_to 'Delete', activity_path(activity), method: :delete, data: { confirm: 'Are you sure?' }, class: "badge badge-pill badge-danger" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="my-padding pt-4">
  <%= link_to '<button class="btn btn-secondary" type="button">Create an activity</button>'.html_safe, new_activity_path %>
  <%= link_to '<button class="btn btn-secondary" type="button">Log an activity</button>'.html_safe, new_log_path %>
  <%= link_to '<button class="btn btn-secondary" type="button">Go home</button>'.html_safe, root_path %>
</div>